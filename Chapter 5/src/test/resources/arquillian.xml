<?xml version="1.0" encoding="UTF-8"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://jboss.org/schema/arquillian"
	xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">
	<container qualifier="tomcat" default="true">
		<configuration>
   		<property name="user">tomcat</property>
   		<property name="pass">tomcat</property>
		</configuration>
	</container>
	<extension qualifier="spring">
		<!-- Can be overridden or skipped entirely, this is the default value. 
			can be changed to a file system version. <property name="customContextClass">org.springframework.context.support.ClassPathXmlApplicationContext</property> -->
		<!-- not required, if you're using a custom context class, this is the 
			default value. <property name="customAnnotationContextClass">org.springframework.context.annotation.AnnotationConfigApplicationContext</property> -->
	</extension>
</arquillian>